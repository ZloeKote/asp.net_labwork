@model LabWork.Models.RegisterViewModel
@{
    Layout = "_menu";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Реєстрація</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style registerPage.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</head>

<body>
    <div class="start-page">
        <div class="start-page-wrapper">
            <div class="logo">
                <img src="~/img/boycat_c.png" alt="boycat">
                <div class="under-logo-text">
                    <span class="logo-text-title">CatGames</span>
                    <span class="logo-text-quote">Купуй ігри дешевше, зручніше</span>
                </div>
            </div>
            <div class="log-in-block">
                <span class="log-in-text">Зареєструватися</span>
                <form id="account" , method="POST" , asp-action="Register" asp-controller="Account">
                    <span asp-validation-summary="All" class="text-danger"></span>
                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="Name">Ім'я<span style="color:red" title="Обов'язкове поле">*</span></label>
                            <input class="form-control" asp-for="Name" type="text" name="name" placeholder="Шу" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="Surname">Прізвище</label>
                            <input class="form-control" asp-for="Surname" type="text" name="surname" placeholder="Такер" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="Email">Пошта<span style="color:red" title="Обов'язкове поле">*</span></label>
                            <input class="form-control" asp-for="Email" type="text" name="email" placeholder="example@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="Password">Пароль<span style="color:red" title="Обов'язкове поле">*</span></label>
                            <input class="form-control" asp-for="Password" type="password" name="password" placeholder="Введіть пароль" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="ConfirmPassword">Підтвердження паролю<span style="color:red" title="Обов'язкове поле">*</span></label>
                            <input class="form-control" asp-for="ConfirmPassword" type="password" name="confirmPassword" placeholder="Повторіть пароль" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Зареєструватися" class="btn btn-success"
                                   style="--bs-btn-padding-y: 5px;--bs-btn-padding-x: 20px;--bs-btn-font-size: 20px;" />
                        </div>
                    </div>
                    <p class="reg-label">
                        Вже маєте акаунт? <a asp-action="Login">Увійти</a>
                    </p>
                </form>
                
            </div>
        </div>
    </div>

    <footer class="footer">
        <span class="footer-credentials">
            Copyright © 2023 CatGames. Всі права захищені.
        </span>
    </footer>
</body>
</html>