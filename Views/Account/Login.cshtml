@model LabWork.Models.LoginViewModel
@{
    Layout = "_menu";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Вхід</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style loginPage.css">
    <script src="~/js/js loginPage.js" defer></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="start-page">
        <div class="start-page-wrapper">
            <div class="logo">
                <img src="~/img/boycat_c.png" alt="boycat">
                <div class="under-logo-text">
                    <span class="logo-text-title">CatGames</span>
                    <span class="logo-text-quote">Купуй ігри дешевше, зручніше</span>
                </div>
            </div>
            <div class="log-in-block">
                <span class="log-in-text">Увійти</span>
                <form id="account" method="POST" asp-action="Login" asp-controller="Account">
                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="Email">Пошта</label>
                            <input class="form-control" asp-for="Email" type="text" name="email" placeholder="example@gmail.com" />
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-xs-2">
                            <label class="control-label" asp-for="Password">Пароль</label>
                            <input class="form-control" asp-for="Password" type="password" name="password" placeholder="Введіть пароль" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 checkbox">
                            <label asp-for="RememberMe" class="pr-4 pl-0">
                                <input asp-for="RememberMe" />
                            </label>
                            Remember me?
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Увійти" class="btn btn-primary"
                               style="--bs-btn-padding-y: 5px;--bs-btn-padding-x: 20px;--bs-btn-font-size: 20px;" />
                        </div>
                    </div>
                    <p class="reg-label">
                        Не маєте акаунту? <a asp-action="Register">Зареєструватися</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <footer class="footer">
        <span class="footer-credentials">
            Copyright © 2023 CatGames. Всі права захищені.
        </span>
    </footer>
</body>
</html>